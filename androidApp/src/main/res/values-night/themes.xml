<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AppTheme" parent="BaseAppStyle">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryVariant">@color/colorAccentLight</item>
        <item name="colorPrimaryContainer">@color/colorAccentLight</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondaryNight</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryLightNight</item>
        <item name="colorOnSecondary">@color/white_smoke</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/black</item>
<!--        <item name="colorSurface">@color/white_smoke</item>-->
        <item name="android:outlineAmbientShadowColor" tools:targetApi ="P">@color/colorAccentLight</item>
        <item name="android:outlineSpotShadowColor" tools:targetApi ="P">@color/colorAccent</item>
    </style>
</resources>